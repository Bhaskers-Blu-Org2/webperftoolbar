{
    "compilerOptions": {
        "outDir": "dist/tsc",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "sourceMap": true,
        "listFiles": true,
        "baseUrl": "src",
        "typeRoots": [
            "node_modules/@types"
        ],
        "traceResolution": true,
        "importHelpers": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "./src/**/*"
    ]
}